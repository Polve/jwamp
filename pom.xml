<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.github.ghetolay</groupId>
	<artifactId>jwamp</artifactId>
	<url>https://github.com/ghetolay/jwamp</url>
	<version>0.0.1-SNAPSHOT</version>
	<name>jwamp</name>
	<description>A server/client java implementation of the WebSocket subprotocol WAMP. More information about WAMP at http://wamp.ws/.</description>
	<dependencies>
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-websocket</artifactId>
			<version>8.1.4.v20120524</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-webapp</artifactId>
			<version>8.1.4.v20120524</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson</groupId>
			<artifactId>jackson-datatype-json-org</artifactId>
			<version>1.8.0</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.5</version>
		</dependency>
		<dependency>
			<groupId>stax</groupId>
			<artifactId>stax</artifactId>
			<version>1.2.0</version>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/java/imbasoft/jwamp</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
	      <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-release-plugin</artifactId>
	        <version>2.0-beta-9</version>
	      </plugin>
    	</plugins>
	</build>

	<scm>
		<connection>scm:git:git@github.com:ghetolay/jwamp.git</connection>
		<url>scm:git:git@github.com:ghetolay/jwamp.git</url>
		<developerConnection>scm:git:git@github.com:ghetolay/jwamp.git</developerConnection>
	</scm>
</project>